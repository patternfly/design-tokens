{
  "source": [
    "tokens/default/light/*.json",
    "tokens/redhat/light/redhat*.json"
  ],
  "basePxFontSize": 16,
  "platforms": {
    "css": {
      "transformGroup": "patternfly/css",
      "buildPath": "build/css/",
      "prefix": "pf-t",
      "files": [{
        "destination": "tokens-redhat.scss",
        "format": "customFormat",
        "options": {
          "outputReferences": true
        },
        "filter": {
          "attributes": {
            "category": "global"
          }
        }
      }]
    }
  }
}
